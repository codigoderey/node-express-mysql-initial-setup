extends layout
block contenido
    .contenido-principal
        h1 #{nombrePagina}

        if errores
            each error in errores
                .alerta.error= error.texto

        form.agregar-proyecto(method="POST" action="/nuevo-proyecto")
            .campo
                label(for="nombre") Nombre Proyecto
                input(type="text" id="nombre" name="nombre" placeholder="Nombre del proyecto")
            .campo.enviar
                input(type="submit" value="Agregar" class="boton")
